# Copy to /etc/my.cnf.d/justin-server.cnf
[server]
default-time-zone='+00:00'
max_connections = 500
ssl
ssl-cipher=DHE-RSA-AES256-SHA
ssl_capath=/etc/grid-security/certificates
ssl_cert=/etc/justin-secrets/justin-db-dev.dune.hep.ac.uk.cert.pem
ssl_key=/etc/justin-secrets/justin-db-dev.dune.hep.ac.uk.key.pem

[mysqld] 
thread_cache_size=100 
slow_query_log

